@model IEnumerable<ExpenseTracker.Models.ExpenseCategory>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Expense Category Name
            </th>
            <th >Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpenseCategoryName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.ExpenseCategoryId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.ExpenseCategoryId">Details</a> |*@
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ExpenseCategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
